<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fotoface.ee4yo.studio.com.fotoface.LoginActivity"
    android:background="@color/fundoAzul"
    android:gravity="center_vertical|center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/esc"
        android:layout_above="@+id/ADM_loginID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="@dimen/altura_caixa"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/ADM_loginID"
        android:hint="Digite o seu e-mail:"
        android:textColor="@color/cinzaA"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:elevation="@dimen/caixa_elevacao"
        android:background="@drawable/myrect"
        android:layout_marginBottom="@dimen/caixa_margem_inferior"
        android:paddingLeft="@dimen/caixa_padding_esquerda"
        android:translationZ="@dimen/caixa_elevacao"
        android:typeface="monospace"
        android:textSize="@dimen/caixa_tamanho_fonte" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/bt_ADM_logarID"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:translationZ="@dimen/caixa_elevacao"
        android:theme="@style/botaoPadrao"
        android:layout_below="@+id/ADM_loginID" />

</RelativeLayout>
