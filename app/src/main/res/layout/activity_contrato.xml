<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fotoface.ee4yo.studio.com.fotoface.model.ContratoActivity"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/fundoAzul">

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/webView1Id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true"
        android:scrollIndicators="right"
        android:elevation="10dp"
        android:translationZ="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceitar"
        android:id="@+id/btAceitar"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/webView1Id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/caixa_elevacao"
        android:translationZ="@dimen/caixa_elevacao"
        android:theme="@style/botaoPadrao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="discordar"
        android:id="@+id/btDiscordar"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/btAceitar"
        android:layout_alignRight="@+id/webView1Id"
        android:layout_alignEnd="@+id/webView1Id"
        android:translationZ="@dimen/caixa_elevacao"
        android:elevation="@dimen/caixa_elevacao"
        android:theme="@style/botaoPadrao"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_above="@+id/webView1Id"
        android:layout_centerHorizontal="true"
        android:background="@drawable/notas"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
